/* pages/details/details.wxss */
.swiper-container{
  padding: 16rpx 20rpx;
  /* tips 相对于 swiper-container 级 */
  position: relative;
}

.swiper-container swiper{
  height: 520rpx;
  background: #ECECEC;
}

.swiper-img{
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.swiper-container .tips{
  /* 定位 */
  position: absolute;   
  right: 50rpx;
  bottom: 40rpx;
  background-color: #333;
  /* 透明 */
  opacity: 0.6; 
  padding: 4rpx 20rpx;
  border-radius: 20rpx;
}
.swiper-container .tips text{
  font-size: 32rpx;
  color: #fff;
  display:flex;
  align-items:center;
  justify-content:center;
}


.mv-info{
  padding: 20rpx;
}

.mv-info .price{
  font-size: 32rpx;
}

.mv-info .share-box{
  display: flex;
  padding-top: 20rpx;
}

.mv-info .share-box .title{
  font-size: 34rpx;
  color: #333;   

  display: -webkit-box;
  line-height: 46rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  overflow: hidden;
  text-overflow:ellipsis;

  width: 86%;
   
}

.mv-info .share-box .icon-fenxiang{
  font-size: 60rpx;
}
.mv-info .share-box .share{
  padding: 8rpx 0;
  background: #fff;
  font-weight: normal;
  width: 14%;
}

.address-box{
  padding: 20rpx 20rpx;
  display: flex;
  align-items: center;
  background: #f5f5f5;
}

.address-box .icon-location{
  font-size: 42rpx;
}
.address-box .address{
  font-size: 32rpx;
  color: #333;
  padding-left: 10rpx;
  display: -webkit-box;
  line-height: 46rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:1;
  overflow: hidden;
  text-overflow:ellipsis; 
}

.details-box{
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  margin-bottom: 100rpx;
}
.details-box .img{
  width: 100%;
  display: block;
}

.bottom-nav{
  display: flex;
  position: fixed;
  left: 0;
  bottom: 0;
  background: #fff;
  width: 100%;
  height: 100rpx;
}

.bottom-nav .small{
  flex: 0.5;
  text-align: center;
  font-size: 30rpx;
}

.bottom-nav .addcart{
  flex: 1;
  text-align: center;
  line-height: 100rpx;
  font-size: 36rpx;
  background: #ffa900;
  color: #fff;
}

.bottom-nav .atbuy{
  flex: 1;
  text-align: center;
  line-height: 100rpx;
  font-size: 36rpx;
  background: #fe7302;
  color: #fff;
}