/**index.wxss**/
.swiper-container{
  padding: 16rpx 20rpx;
}

.swiper-container swiper{
  height: 320rpx;
  background: #ECECEC;
}

.swiper-img{
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.tab-container{
  padding-left: 10rpx;
  padding-right: 10rpx;
}

.tab-container scroll-view{
  white-space: nowrap;
}

/* .tab-container .tab-box{
  
} */

.tab-container .tab-box .tab-item{
  display: inline-block;
  width: 160rpx;
  height: 70rpx;
  border: solid 2rpx #00afb4;
  text-align: center;
  line-height: 70rpx;
  font-size: 28rpx;
  border-radius: 12rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.tab-container .tab-box .tab-item{
  color: #00afb4;
}

.tab-container .tab-box .tab-item.current{
  color: #fff;
  background-color: #00afb4;
}

.list-container{
  width: 100%;
}

.list-container .item{
  display: flex;
  padding: 30rpx 20rpx;
  border-bottom: solid 2rpx #eee;
}

.list-container .item .pic{
  width: 200rpx;
  height: 240rpx;
  background-color: #fff;

  /* 居中 */
  display: flex;
  align-items: center;
  justify-content: center;  
}

.list-container .item .pic image{
  width: 200rpx;
  height: 200rpx;
}

.list-container .item .content{
  height: 200rpx;
  margin-left: 30rpx;
  display: flex;
  flex-direction:column;
}


.list-container .item .content .title{
  font-size: 32rpx;
  flex: 2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;

  padding-top: 6rpx;
}

.list-container .item .content .desc{
  font-size: 24rpx;
  color: #999;
  flex: 1;
  
  padding-top: 10rpx;
}

.list-container .item .content .price{
  font-size: 32rpx;
  flex: 1;

  padding-top: 10rpx;
}

.list-container .more-text{
  width: 100%;
  height: 82rpx;
  text-align: center;
  line-height: 82rpx;
  font-size: 32rpx;
  flood-color: #999;
}
