/* pages/shopcart/shopcart.wxss */

.container{
  padding: 10rpx 0;
}


.container .top-box{
  height: 86rpx;
  background-color: #f5f5f5;
  align-items: center;
  display: flex;
  flex-direction:row;
  justify-content: space-between;
  padding: 0 20rpx;
  font-size: 42rpx;
  color: black;
  /* position: relative; */
}

.goods-box{
  margin-bottom: 100rpx;
}

.goods-item{
  display: flex;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.goods-item checkbox-group{
  align-items: center;
  display: flex;
  padding: 0 20rpx;
}


.goods-item .goods-img{
  width: 260rpx;
  height: 280rpx;
  display: inline-block;
}


.goods-item .goods-info{
  flex: 1;
  flex-direction:column;
  display: flex;
  justify-content: space-between;
  padding: 10rpx 20rpx;
}


.goods-item .goods-info .goods-title{
  font-size: 38rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.action-box{
  display: flex;
  align-items: center;
}

.price{
  width: 30%;
}

.action{
  width: 70%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 12rpx ;
}

.action button{
  font-weight: normal;
}

.order-bottom{
  width: 100%;
  height: 90rpx;
  display: flex;
  padding: 20rpx;
  /* 固定底部 */
  position: fixed;
  left: 0;
  bottom: 0;

  background-color: #fff;
  align-items: center;
  flex-direction:row;
  justify-content: space-between;
  border-top: 1rpx solid #f5f5f5;
}

.order-bottom .order-all{
  display: flex;
}

.order-bottom .order-pay{
    margin-right: 50rpx;
    background-color: #f5f5f5;
    border-radius: 10rpx;
    padding: 10rpx 20rpx;
    font-size: 38rpx;
    color: #00afb4;
}